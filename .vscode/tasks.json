{
    "version": "2.0.0",
    "tasks": [
        {
            "label": "build",
            "command": "dotnet",
            "type": "process",
            "args": [
                "build",
                "${workspaceFolder}/src/TimonApiGateway.csproj",
                "/property:GenerateFullPaths=true",
                "/consoleloggerparameters:NoSummary"
            ],
            "problemMatcher": "$msCompile"
        },
        {
            "label": "publish",
            "command": "dotnet",
            "type": "process",
            "args": [
                "publish",
                "${workspaceFolder}/src/TimonApiGateway.csproj",
                "/property:GenerateFullPaths=true",
                "/consoleloggerparameters:NoSummary"
            ],
            "problemMatcher": "$msCompile"
        },
        {
            "label": "watch",
            "command": "dotnet",
            "type": "process",
            "args": [
                "watch",
                "run",
                "${workspaceFolder}/src/TimonApiGateway.csproj",
                "/property:GenerateFullPaths=true",
                "/consoleloggerparameters:NoSummary"
            ],
            "problemMatcher": "$msCompile"
        },
        {
            "appId": "timon-api-gateway",
            "appPort": 5002,
            "label": "daprd-debug",
            "type": "daprd",
            "dependsOn": "build",
            "componentsPath": "./src/components",
            "enableMetrics": false,
            "grpcPort": 50003,
            "httpPort": 3500
        },
        {
            "appId": "timon-api-gateway",
            "label": "daprd-down",
            "type": "daprd-down"
        }
    ]
}
